<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<StackPane fx:id="settingsRootPane" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.settings.SettingsController">
    <ImageView fx:id="backgroundImage" fitHeight="300.0" fitWidth="380.0" pickOnBounds="true">
        <image>
            <Image url="@../assets/settings.jpg" />
        </image>
    </ImageView>
    
    <!-- Main HBox to arrange content -->
    <HBox alignment="CENTER_RIGHT">
        <!-- Spacer to push content to right -->
        <Region HBox.hgrow="ALWAYS" />
        
        <!-- Settings Controls -->
        <VBox alignment="CENTER" spacing="25.0" maxWidth="700" minWidth="500"> <!-- increased width -->
            <padding>
                <Insets right="50" />
            </padding>

            <VBox alignment="CENTER" spacing="15" style="-fx-background-color: rgba(0, 0, 0, 0.7); -fx-padding: 30;">
                <Label style="-fx-font-family: 'Pocket Monk'; -fx-font-size: 48px; -fx-text-fill: white;" text="SOUND" />
                
                <VBox alignment="CENTER" spacing="15">
                    <Label text="Master Volume" style="-fx-font-family: 'Arial Black'; -fx-font-size: 18px; -fx-text-fill: white;"/>
                    <HBox alignment="CENTER" spacing="15">
                        <Slider fx:id="masterVolumeSlider" min="0" max="1" value="1.0"
                                showTickLabels="false" showTickMarks="true" prefWidth="450"
                                style="-fx-control-inner-background: white;"/>
                        <Label fx:id="masterVolumeLabel" minWidth="40" alignment="CENTER_RIGHT"
                               style="-fx-font-family: 'Arial Black'; -fx-font-size: 18px; -fx-text-fill: white;"/>
                    </HBox>
                </VBox>

                <VBox alignment="CENTER" spacing="15">
                    <Label style="-fx-font-family: 'Arial Black'; -fx-font-size: 18px; -fx-text-fill: white;" text="BGM Volume" />
                    <HBox alignment="CENTER" spacing="15">
                        <Slider fx:id="volumeSlider" max="1" min="0" prefWidth="450"
                                showTickLabels="false" showTickMarks="true"
                                style="-fx-control-inner-background: white;" value="0.25" />
                        <Label fx:id="bgmVolumeLabel" minWidth="40" alignment="CENTER_RIGHT"
                               style="-fx-font-family: 'Arial Black'; -fx-font-size: 18px; -fx-text-fill: white;"/>
                    </HBox>
                </VBox>

                <VBox alignment="CENTER" spacing="15">
                    <Label style="-fx-font-family: 'Arial Black'; -fx-font-size: 18px; -fx-text-fill: white;" text="SFX Volume" />
                    <HBox alignment="CENTER" spacing="15">
                        <Slider fx:id="sfxVolumeSlider" max="1" min="0" prefWidth="450"
                                showTickLabels="false" showTickMarks="true"
                                style="-fx-control-inner-background: white;" value="0.25" />
                        <Label fx:id="sfxVolumeLabel" minWidth="40" alignment="CENTER_RIGHT"
                               style="-fx-font-family: 'Arial Black'; -fx-font-size: 18px; -fx-text-fill: white;"/>
                    </HBox>
                </VBox>

                <VBox alignment="CENTER" spacing="15">
                    <Label style="-fx-font-family: 'Arial Black'; -fx-font-size: 18px; -fx-text-fill: white;" text="Voice Volume" />
                    <HBox alignment="CENTER" spacing="15">
                        <Slider fx:id="voiceVolumeSlider" min="0" max="1" value="0.5"
                                showTickLabels="false" showTickMarks="true" prefWidth="450"
                                style="-fx-control-inner-background: white;"/>
                        <Label fx:id="voiceVolumeLabel" minWidth="40" alignment="CENTER_RIGHT"
                               style="-fx-font-family: 'Arial Black'; -fx-font-size: 18px; -fx-text-fill: white;"/>
                    </HBox>
                </VBox>

                <Button onAction="#backToMenu" 
                        style="-fx-background-color: transparent; 
                               -fx-text-fill: white; 
                               -fx-font-family: 'Pocket Monk'; 
                               -fx-font-size: 32px; 
                               -fx-cursor: hand;" 
                        text="BACK" />
            </VBox>
        </VBox>
    </HBox>
</StackPane>
