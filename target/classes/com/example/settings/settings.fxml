<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<StackPane fx:id="settingsRootPane" prefHeight="500.0" prefWidth="800.0" stylesheets="@settingstyle.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.settings.SettingsController">
   <ImageView fx:id="backgroundImage" fitHeight="500.0" fitWidth="800.0" preserveRatio="false">
      <image>
         <Image url="@../assets/settings.jpg" />
      </image>
   </ImageView>
    <HBox fx:id="settingsHBox" alignment="CENTER_RIGHT">
        <padding>
            <Insets top="50.0" right="50.0" bottom="50.0" left="0.0" />
        </padding>
        <VBox fx:id="mainSettings" styleClass="settings-box">
            <Label fx:id="soundLabel" text="SOUND" styleClass="settings-label" />
            
            <!-- Volume Controls -->
            <VBox styleClass="small-section">
                <VBox alignment="CENTER" spacing="10" styleClass="small-section">
                    <Label text="Master Volume" styleClass="volume-label"/>
                    <HBox alignment="CENTER" spacing="10">
                        <Slider fx:id="masterVolumeSlider" min="0" max="1" value="1.0"
                                showTickLabels="true" showTickMarks="true" prefWidth="300" styleClass="volume-slider"/>
                        <Label fx:id="masterVolumeLabel" text="1.0" styleClass="volume-value"/>
                    </HBox>
                </VBox>

                <VBox alignment="CENTER" spacing="10" styleClass="small-section">
                    <Label text="BGM Volume" styleClass="volume-label" />
                    <HBox alignment="CENTER" spacing="10">
                        <Slider fx:id="volumeSlider" max="1" min="0" prefWidth="300"
                                showTickLabels="true" showTickMarks="true" value="0.25" styleClass="volume-slider"/>
                        <Label fx:id="bgmVolumeLabel" text="0.25" styleClass="volume-value"/>
                    </HBox>
                </VBox>

                <VBox alignment="CENTER" spacing="10" styleClass="small-section">
                    <Label text="SFX Volume" styleClass="volume-label" />
                    <HBox alignment="CENTER" spacing="10">
                        <Slider fx:id="sfxVolumeSlider" max="1" min="0" prefWidth="300"
                                showTickLabels="true" showTickMarks="true" value="0.25" styleClass="volume-slider"/>
                        <Label fx:id="sfxVolumeLabel" text="0.25" styleClass="volume-value"/>
                    </HBox>
                </VBox>

                <VBox alignment="CENTER" spacing="10" styleClass="small-section">
                    <Label text="Voice Volume" styleClass="volume-label" />
                    <HBox alignment="CENTER" spacing="10">
                        <Slider fx:id="voiceVolumeSlider" min="0" max="1" value="0.5"
                                showTickLabels="true" showTickMarks="true" prefWidth="300" styleClass="volume-slider"/>
                        <Label fx:id="voiceVolumeLabel" text="0.5" styleClass="volume-value"/>
                    </HBox>
                </VBox>
            </VBox>

            <Button fx:id="backButton" onAction="#backToMenu" text="BACK" styleClass="settings-button" />
        </VBox>
    </HBox>
</StackPane>
