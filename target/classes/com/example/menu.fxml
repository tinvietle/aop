<StackPane fx:id="rootPane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.MenuController">
    <children>
        <!-- Background Video -->
        <MediaView fx:id="backgroundVideo">
         <effect>
            <Blend />
         </effect></MediaView>

        <!-- Game UI -->
        <BorderPane>
            <top>
                <Label text="Age Of Pokemon" BorderPane.alignment="CENTER">
                    <font>
                        <Font name="Arial Bold" size="36" />
                    </font>
                    <padding>
                        <Insets top="20" />
                    </padding>
                </Label>
            </top>
            <center>
                <VBox alignment="CENTER" spacing="15">
                    <children>
                        <Button fx:id="startButton" prefWidth="200" text="Start Game" />
                        <Button fx:id="settingsButton" prefWidth="200" text="Settings" />
                        <Button fx:id="exitButton" prefWidth="200" text="Exit" />
                    </children>
                </VBox>
            </center>
            <bottom>
                <Label text="Â© 2024 TAM Studio" BorderPane.alignment="CENTER">
                    <padding>
                        <Insets bottom="10" />
                    </padding>
                </Label>
            </bottom>
        </BorderPane>
    </children>
</StackPane>
