<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.effect.*?>

<StackPane fx:id="registerRootPane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.register.RegisterController">
    <VBox alignment="TOP_CENTER" prefHeight="700" prefWidth="500" spacing="15" style="-fx-background-color: rgba(0, 0, 0, 0.8);">
        <Label text="Register Players" 
               style="-fx-font-family: 'Pocket Monk'; 
                      -fx-font-size: 72; 
                      -fx-text-fill: linear-gradient(to bottom, #ffd700, #ff8c00);
                      -fx-padding: 10;">
            <effect>
                <Glow level="0.6">
                    <input>
                        <DropShadow color="#000000" 
                                   spread="0.7"
                                   radius="5"
                                   offsetX="0"
                                   offsetY="0" />
                    </input>
                </Glow>
            </effect>
            <VBox.margin>
                <Insets top="80.0" bottom="5.0" />
            </VBox.margin>
        </Label>
        
        <VBox alignment="CENTER" spacing="10">
            <Label style="-fx-font-size: 24; -fx-text-fill: white;" text="Number of Players:" />
            <Spinner fx:id="playerCountSpinner" editable="true" initialValue="2" max="10" min="2" prefWidth="250" prefHeight="40" style="-fx-font-size: 20;" />
        </VBox>
        
        <VBox fx:id="playerNamesContainer" alignment="TOP_CENTER" maxHeight="380" maxWidth="450" spacing="15" style="-fx-background-color: rgba(255, 255, 255, 0.8); -fx-padding: 25; -fx-background-radius: 15; -fx-border-color: rgba(0, 0, 0, 0.5); -fx-border-width: 3; -fx-border-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.8), 10, 0, 0, 0);">
            <!-- Player name fields will be added here dynamically -->
        </VBox>
        
        <VBox alignment="CENTER" spacing="20">
            <Button fx:id="startGameButton" prefWidth="300" prefHeight="50"
                    style="-fx-background-color: linear-gradient(to bottom, #4CAF50, #45a049);
                           -fx-text-fill: white;
                           -fx-font-size: 24;
                           -fx-font-weight: bold;
                           -fx-cursor: hand;
                           -fx-background-radius: 12;
                           -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.4), 6, 0, 0, 2);"
                    text="Start Game">
                <effect>
                    <Glow level="0.3" />
                </effect>
            </Button>
            <Button fx:id="backButton" prefWidth="300" prefHeight="50"
                    style="-fx-background-color: linear-gradient(to bottom, #f44336, #da190b);
                           -fx-text-fill: white;
                           -fx-font-size: 24;
                           -fx-font-weight: bold;
                           -fx-cursor: hand;
                           -fx-background-radius: 12;
                           -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.4), 6, 0, 0, 2);"
                    text="Back">
                <effect>
                    <Glow level="0.3" />
                </effect>
            </Button>
            <padding>
                <Insets bottom="30" />
            </padding>
        </VBox>
    </VBox>
</StackPane>
