<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.media.MediaView?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="Pane" prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.capture.OnlyMedia">
   <children>
        <MediaView fx:id="mediaView" fitHeight="450.0" fitWidth="800.0" preserveRatio="true">
         <StackPane.margin>
            <Insets />
         </StackPane.margin></MediaView>
      <Label fx:id="messageLabel" style="-fx-background-color: rgba(0, 0, 0, 0.7); -fx-background-radius: 10px; -fx-border-radius: 1px; -fx-padding: 15px;" text="Click anywhere to return" textFill="WHITE">
         <font>
            <Font size="28.0" />
         </font>
      </Label>
      <Button fx:id="skipButton"
           text="SKIP"
           onMouseClicked="#onSkip"
           style="-fx-background-color: transparent; -fx-font-size: 18px;"
           StackPane.alignment="TOP_RIGHT"/>
   </children>
</StackPane>
