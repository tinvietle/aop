<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<StackPane fx:id="welcomeOverlay" 
           xmlns:fx="http://javafx.com/fxml" 
           fx:controller="com.example.game.DialogController"
           style="-fx-background-color: transparent;">
    <VBox fx:id="dialogBox" 
          alignment="CENTER" 
          spacing="20" 
          style="-fx-background-color: rgba(255, 255, 255, 0.9); 
                 -fx-padding: 20; 
                 -fx-background-radius: 10;
                 -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.6), 10, 0, 0, 0);">
        <Text fx:id="welcomeText" text="Welcome to Age of Pokemon" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
    </VBox>
</StackPane>
