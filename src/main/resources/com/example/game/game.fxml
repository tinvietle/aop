<BorderPane fx:id="borderPane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.game.GameController">
   <top>
      <MenuBar fx:id="menuBar" prefHeight="24.0" prefWidth="800.0" BorderPane.alignment="CENTER">
        <menus>
          <Menu fx:id="fileMenu" mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#newGame" text="New" />
               <MenuItem mnemonicParsing="false" onAction="#closeProgram" text="Exit" />
            </items>
          </Menu>
          <Menu fx:id="editMenu" mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
              <MenuItem mnemonicParsing="false" onAction="#openSettings" text="Settings" />
            </items>
          </Menu>
          <Menu fx:id="helpMenu" mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <bottom>
      <fx:include fx:id="rollIncludedPane" source="diceLayout.fxml" />
   </bottom>
