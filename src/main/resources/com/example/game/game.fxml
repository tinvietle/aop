                              <GridPane fx:id="playerInfo" style="-fx-background-color: #ffde59;">
                                <columnConstraints>
                                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                </columnConstraints>
                                <rowConstraints>
                                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                </rowConstraints>
                                 <children>
                                    <Label text="Score" GridPane.columnIndex="1" />
                                    <Label text="Player Name" />
                                 </children>
                              </GridPane>
                           </content>
                      </TitledPane>
                     </panes>
                  </Accordion>
                  <ImageView fx:id="talonflame" accessibleRole="BUTTON" fitHeight="89.0" fitWidth="71.0" layoutX="621.0" layoutY="149.0" onMouseClicked="#catchPokemon" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: hand;">
