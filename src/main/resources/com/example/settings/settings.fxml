<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="settingsRootPane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.settings.SettingsController">
    <VBox alignment="CENTER" spacing="20.0">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>

        <VBox alignment="CENTER" spacing="10" style="-fx-background-color: rgba(44, 62, 80, 0.8); -fx-padding: 20;">
            <Label style="-fx-font-size: 24px; -fx-text-fill: white;" text="Sound Settings" />
            
            <VBox alignment="CENTER" spacing="10">
                <Label style="-fx-text-fill: white;" text="BGM Volume" />
                <Slider fx:id="volumeSlider" max="1" min="0" prefWidth="300" showTickLabels="true" showTickMarks="true" style="-fx-control-inner-background: white;" value="0.5" />
            </VBox>

            <Button onAction="#backToMenu" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-cursor: hand;" text="Back" />
        </VBox>
    </VBox>
</StackPane>
