<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<StackPane fx:id="settingsRootPane" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.settings.SettingsController">
    <VBox alignment="CENTER" spacing="20.0">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <VBox alignment="CENTER" spacing="10" style="-fx-background-color: rgba(44, 62, 80, 0.8); -fx-padding: 20;">
            <Label text="Sound Settings" style="-fx-font-size: 24px; -fx-text-fill: white;"/>
            
            <VBox alignment="CENTER" spacing="10">
                <Label text="BGM Volume" style="-fx-text-fill: white;"/>
                <Slider fx:id="volumeSlider" min="0" max="1" value="0.5" 
                        showTickLabels="true" showTickMarks="true" prefWidth="300"
                        style="-fx-control-inner-background: white;"/>
            </VBox>

            <Button text="Back to Menu" onAction="#backToMenu" 
                    style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
        </VBox>
    </VBox>
</StackPane>
