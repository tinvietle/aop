<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<HBox spacing="50" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.result.ResultDisplay">
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>
    
    <VBox alignment="CENTER" spacing="20" prefWidth="500" styleClass="content-box">
        <ImageView fx:id="trophyImage" fitWidth="300" fitHeight="300" preserveRatio="true"/>
        <Label text="Winner!" style="-fx-font-size: 48px; -fx-font-weight: bold;"/>
        <Label fx:id="winnerName" style="-fx-font-size: 36px;"/>
        <Label fx:id="winnerScore" style="-fx-font-size: 32px;"/>
    </VBox>
    
    <VBox fx:id="leaderboardContainer" alignment="CENTER" spacing="20" prefWidth="500" styleClass="content-box">
        <Label text="Leaderboard" style="-fx-font-size: 48px; -fx-font-weight: bold;"/>
        <ListView fx:id="leaderboardList" prefHeight="600" style="-fx-font-size: 24px;"/>
        <Button text="New Game" fx:id="newGameButton" styleClass="action-button" maxWidth="Infinity"/>
        <Button text="Exit" fx:id="exitButton" styleClass="action-button" maxWidth="Infinity"/>
    </VBox>
</HBox>
