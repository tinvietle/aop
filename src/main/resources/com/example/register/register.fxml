<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.effect.*?>

<StackPane fx:id="registerRootPane" prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.register.RegisterController" stylesheets="@register.css">
    <ImageView fx:id="backgroundImage" fitHeight="500.0" fitWidth="800.0" preserveRatio="false">
        <image>
            <Image url="@../assets/register.jpg" />
        </image>
    </ImageView>
    <VBox alignment="TOP_CENTER" spacing="15" styleClass="root-vbox">
        <Label fx:id="titleLabel" text="Register Players">
            <effect>
                <Glow level="0.6">
                    <input>
                        <DropShadow color="#000000" 
                                   spread="0.7"
                                   radius="5"
                                   offsetX="0"
                                   offsetY="0" />
                    </input>
                </Glow>
            </effect>
        </Label>
        
        <VBox alignment="CENTER" spacing="10">
            <Label fx:id="errorLabel" styleClass="error-label" />
            <Label styleClass="subtitle-label" text="Number of Players:" />
            <Spinner fx:id="playerCountSpinner" editable="true" initialValue="2" max="6" min="2" prefWidth="250" prefHeight="40" styleClass="player-spinner" />
        </VBox>
        
        <VBox fx:id="playerNamesContainer" alignment="TOP_CENTER" maxHeight="380" maxWidth="450" spacing="15" styleClass="player-names-container">
            <!-- Player name fields will be added here dynamically -->
        </VBox>
        
        <VBox alignment="CENTER" spacing="20">
            <Button fx:id="startGameButton" prefWidth="300" prefHeight="50" styleClass="start-button" text="Start Game">
                <effect>
                    <Glow level="0.3" />
                </effect>
            </Button>
            <Button fx:id="backButton" prefWidth="300" prefHeight="50" styleClass="back-button" text="Back">
                <effect>
                    <Glow level="0.3" />
                </effect>
            </Button>
            <padding>
                <Insets bottom="30" />
            </padding>
        </VBox>
    </VBox>
</StackPane>
