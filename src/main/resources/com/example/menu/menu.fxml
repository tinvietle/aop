<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.media.MediaView?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="rootPane" prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.menu.MenuController">
    <children>
        <!-- Background Video -->
        <MediaView fx:id="backgroundVideo">
         <effect>
            <Blend />
         </effect></MediaView>

        <!-- Game UI -->
        <BorderPane>
            <top>
                <Label fx:id="titleText" text="Age Of Pokemon" BorderPane.alignment="CENTER">
                    <font>
                        <Font name="Pocket Monk" size="80" />
                    </font>
                    <effect>
                        <Glow level="0.6">
                            <input>
                                <DropShadow color="#ffd700" spread="0.5" />
                            </input>
                        </Glow>
                    </effect>
                    <style>
                        -fx-text-fill: linear-gradient(to bottom, #ffd700, #ff8c00);
                    </style>
               <padding>
                  <Insets top="20.0" />
               </padding>
                </Label>
            </top>
            <center>
                <VBox alignment="CENTER" spacing="20">
                    <children>
                        <Button fx:id="startButton" prefHeight="60.0" prefWidth="500.0" 
                                style="-fx-background-color: linear-gradient(to bottom, #2A2A2A, #1A1A1A);
                                       -fx-text-fill: linear-gradient(to bottom, #ffd700, #ff8c00);
                                       -fx-font-size: 24;
                                       -fx-font-weight: bold;
                                       -fx-cursor: hand;
                                       -fx-background-radius: 15;
                                       -fx-border-color: #3A3A3A;
                                       -fx-border-width: 2;
                                       -fx-border-radius: 15;" 
                                text="Start Game">
                            <effect>
                                <Glow level="0.3">
                                    <input>
                                        <DropShadow color="#ffd700" spread="0.2" radius="10" />
                                    </input>
                                </Glow>
                            </effect>
                        </Button>
                        <Button fx:id="settingsButton" prefHeight="60.0" prefWidth="500.0"
                                style="-fx-background-color: linear-gradient(to bottom, #2A2A2A, #1A1A1A);
                                       -fx-text-fill: linear-gradient(to bottom, #ffd700, #ff8c00);
                                       -fx-font-size: 24;
                                       -fx-font-weight: bold;
                                       -fx-cursor: hand;
                                       -fx-background-radius: 15;
                                       -fx-border-color: #3A3A3A;
                                       -fx-border-width: 2;
                                       -fx-border-radius: 15;"
                                text="Settings">
                            <effect>
                                <Glow level="0.3">
                                    <input>
                                        <DropShadow color="#ffd700" spread="0.2" radius="10" />
                                    </input>
                                </Glow>
                            </effect>
                        </Button>
                        <Button fx:id="exitButton" prefHeight="60.0" prefWidth="500.0"
                                style="-fx-background-color: linear-gradient(to bottom, #2A2A2A, #1A1A1A);
                                       -fx-text-fill: linear-gradient(to bottom, #ffd700, #ff8c00);
                                       -fx-font-size: 24;
                                       -fx-font-weight: bold;
                                       -fx-cursor: hand;
                                       -fx-background-radius: 15;
                                       -fx-border-color: #3A3A3A;
                                       -fx-border-width: 2;
                                       -fx-border-radius: 15;"
                                text="Exit">
                            <effect>
                                <Glow level="0.3">
                                    <input>
                                        <DropShadow color="#ffd700" spread="0.2" radius="10" />
                                    </input>
                                </Glow>
                            </effect>
                        </Button>
                    </children>
                </VBox>
            </center>
            <bottom>
            <VBox alignment="CENTER" BorderPane.alignment="CENTER">
               <children>
                      <Label text="Â© 2024 TAM Studio">
                          <padding>
                              <Insets bottom="10" />
                          </padding>
                      </Label>
               </children>
            </VBox>
            </bottom>
        </BorderPane>
    </children>
</StackPane>
